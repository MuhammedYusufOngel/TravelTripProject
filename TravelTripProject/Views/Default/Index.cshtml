    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left margin-bot">Plan the Easy Trip</h2>
                    <div style="margin: auto;">
                        <div class="slider">
                            <ul class="rslides" id="slider1">
                                @foreach (var item in Model)
                                {
                                    <li><img src="@item.BlogImage" alt=""></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top">
                    <h3>Merhabalar, Ben Yusuf!</h3>
                    <p>Burası benim gezdiğim yerleri tanıttığım bir web sitesi. Bu site MVC5 ve ASP.NET teknolojileri ile yapılmıştır.</p>
                </div>

                @Html.Action("PartialTop", "Default")

                <div class="grids">
                    <div class="box1">

                        @Html.Action("PartialTop10", "Default")

                        <div class="padding1">
                            <h4>Recent Blogs & First Blogs</h4>

                            @Html.Action("PartialRecentBlogs", "Default")

                            @Html.Action("PartialFirstBlogs", "Default")
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>