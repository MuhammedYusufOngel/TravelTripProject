@using TravelTripProject.Models.Classes
@model List<Blog>

<div class="con-bot">
    @foreach (var item in Model)
    {
        <div class="right">
            <div class="bot-left">
                <img src="@item.BlogImage" height="150" style="margin:auto;" alt="" />
            </div>
            <div class="left-text">
                <h4>@item.Title</h4>
                <span class="doller">@item.Date.ToLongDateString()</span>
                <p>@item.Explanation.Substring(0, item.Explanation.Substring(0, 35).LastIndexOf(" "))...</p>
                <p><a href="/Blog/BlogDetails/@item.Id"><span class="read">Read More >></span></a></p>
            </div>
        </div>
    }

    <div class="clear"></div>
</div>